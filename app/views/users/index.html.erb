<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render'users/user',user: @user %>
			<%= render'books/new' ,book: @book %>
		</div>
		<div class="col-lg-9">
			<h1>Users</h1>
			<table>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user,:profile_image,:fill,100,100,format:'jpeg', fallback: "no_image.jpg",class:"img-circle pull-left profile-img" %></td>
						<td><%= user.name %></td>
						<td><%= link_to"Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


