<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand">
        Bookers
      </a>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample7">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>

        <li><%= link_to"Home",user_path(current_user.id),class: "glyphicon glyphicon-home active"%></li>

        <li><%= link_to"Users",users_path,class: "glyphicon glyphicon-user active" %></li>

        <li><%= link_to"Books",books_path,class: "glyphicon glyphicon-book active" %></li>

        <li><%= link_to"logout",destroy_user_session_path,method: :delete,class: "glyphicon glyphicon-log-out active"%></li>

        <% else %>

        <li><%= link_to"Home" ,root_path,class: "glyphicon glyphicon-home active" %></li>

        <li><%= link_to"About",about_path,class: "glyphicon glyphicon-link active" %></li>

        <li><%= link_to"sign up" ,new_user_registration_path,class: "glyphicon glyphicon-edit active" %></li>

        <li><%= link_to"login" ,new_user_session_path,class: "glyphicon glyphicon-log-in active" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
    </header>
    <div class="page">
      <p class="flash">
        <%= flash[:notice] %>
      </p>
      <p class="alert"><%= alert %></p>
    </div>
     <%= yield %>
    <footer>CopyRight Infratop.in</footer>
  </body>
</html>
