<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render'users/user',user: @user %>
			<%= render'books/new' ,book: @book %>
		</div>

		<div class="col-xs-9">
		<% if @book.errors.any? %>
		<%= @book.errors.count %>
		<p>errors prohibited this obj form being saved:</p>

		<% @book.errors.full_messages.each do |message| %>
		  <%= message %>
		<% end %>
		<% end %>


		<h1>Book</h1>
		<table>
			<thead>
				<tr>Title</tr>
				<tr>Opinion</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user,:profile_image,:fill,100,100,format:'jpeg',fallback: "no_image.jpg",class:"img-circle pull-left profile-img" %></td>
					<td><%= link_to book.title,book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		</div>
		</div>
</div>