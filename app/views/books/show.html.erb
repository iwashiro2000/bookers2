<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render'users/user',user: @user %>
			<%= render'books/new' ,book: @bookn %>
		</div>
		<div class="col-xs-9">
			<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
			<% end %>
			<h1>Book detail</h1>
			<table>
				<thead>
					<tr>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= attachment_image_tag @book.user,:profile_image,:fill,100,100,format:'jpeg',fallback: "no_image.jpg",class: "img-circle pull-left profile-img" %></td>
						<td><%= link_to @user.name, user_path(@user.id) %></td>
						<td><%= link_to @book.title %></td>
						<td><%= @book.body %></td>
						<% if current_user.id == @user.id %>
						<td><%= link_to "Edit" , edit_book_path(@book.id)%></td>
						<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>


